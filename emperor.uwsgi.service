[Unit]
Description=uWSGI Emperor
After=syslog.target

[Service]
ExecStart=/var/www/QTmsg.io/.env/bin/uwsgi --emperor /var/www/QTmsg.io/uwsgi.ini
# Requires systemd version 211 or newer
RuntimeDirectory=uwsgi
Restart=always
KillSignal=SIGTERM
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
